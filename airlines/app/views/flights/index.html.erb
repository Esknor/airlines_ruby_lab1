<p id="notice"><%= notice %></p>

<div class="col-md-offset-2 col-md-8">
<h1>Listing Flights</h1>
<div class='table-stripped'>
  <table class='table'>
    <thead>
      <tr>
        <th width="10%"><h2>Num</h2></th>
        <th width="25%"><h2>From</h2></th>
        <th width="25%"><h2>To</h2></th>
        <th width="10%"><h2>Status</h2></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @flights.each do |flight| %>
        <% if flight.status %>
          <tr class="success">
        <% else %>
          <tr class="danger">
        <% end %>
          <td width="10%"><%= flight.num %></td>
          <td width="25%"><%= flight.fromFlight %></td>
          <td width="25%"><%= flight.toFlight %></td>
          <td width="10%"><%= flight.status %></td>
          <td width="10%"><%= link_to 'Show', flight, class: "btn btn-xs btn-info" %></td>
          <td width="10%"><%= link_to 'Edit', edit_flight_path(flight), class: "btn btn-xs btn-warning"  %></td>
          <td width="10%"><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<%= link_to 'New Flight', new_flight_path, class: "btn btn-block btn-primary"  %>
</div>
