<div class="row">
<div class="col-md-offset-4 col-md-4">
<h1>Sign in</h1>
	<%= form_for(:session, url: sessions_path) do |f| %>
		
		<h3>Email</h3>
		<h3><%= f.text_field :email %></h3>

		<h3>Password</h3>
		<h3><%= f.password_field :password %></h3>

		<%= f.submit "Sign in", class: "btn btn-block btn-primary" %>

		<p>New user? <%= link_to "Sign up now!", signup_path, class: 'btn, btn-default' %></p>
		
	<% end %>
</div>
</div>