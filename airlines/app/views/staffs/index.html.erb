<p id="notice"><%= notice %></p>

<div class="col-sm-offset-2 col-sm-8">
<h1>Listing Staffs</h1>
<div class='table'>
  <table class='table'>
    <thead>
      <tr>
        <th width="50%"><h2>Name</h2></th>
        <th width="30%"><h2>Profession</h2></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @staffs.each do |staff| %>
        <tr>
          <td width="50%"><%= staff.name %></td>
          <td width="30%"><%= staff.profession %></td>
          <td width="10%"><%= link_to 'Show', staff, class: "btn btn-xs btn-info" %></td>
          <td width="10%"><%= link_to 'Edit', edit_staff_path(staff), class: "btn btn-xs btn-warning"  %></td>
          <td width="10%"><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<%= link_to 'New Staff', new_staff_path, class: "btn btn-block btn-primary" %>

</div>
