<div class="row">
<div class="col-md-offset-4 col-md-4">
	<h1>Sign up here!</h1>
	<%= form_for(@user) do |f| %>

		<%= render 'shared/error_messages' %>
		
		<h3>Name</h3>
		<h3><%= f.text_field :name %></h3>

		<h3>Email</h3>
		<h3><%= f.text_field :email %></h3>

		<h3>Password</h3>
		<h3><%= f.password_field :password %></h3>

		<h3>Confirmation</h3>
		<h3><%= f.password_field :password_confirmation %></h3>

		<%= f.submit "Sign up", class: "btn btn-block btn-primary" %>
	<% end %>
</div>
</div>